

@{
    ViewData["Title"] = "Login";
}

@model AccountLoginViewModel

<div class="ui container flex-content">
    <div class="ui one column grid">
        <div class="column">
            <div class="ui one column grid midimage">
                <div class="sixteen wide column">
                    <img class="ui large centered image" src="~/images/logo.png">
                </div>
            </div>
        </div>
        <div class="column">
            <div class="ui two column middle aligned stackable internally celled grid loginsegment">
                <div class="row">
                    <div class="sixteen wide tablet eight wide computer column">
                        <form class="ui small form" id="f_login" asp-controller="account" asp-action="login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form" autocomplete="off">
                            <div class="ui piled segment">
                                <h4 class="ui violet header ribbon label loginheader">Log-in to your account</h4>
                                <div class="field">
                                    <label class="ui">Username</label>
                                    <div class="ui left icon input">
                                        <i class="user icon"></i>
                                        <input asp-for="userName" placeholder="Username" />
                                    </div>
                                </div>
                                <div class="field">
                                    <label class="ui">Password</label>
                                    <div class="ui left icon input">
                                        <i class="lock icon"></i>
                                        <input type="password" asp-for="password" placeholder="Password" />
                                    </div>
                                </div>
                                <button type="submit" form="f_login" class="ui large fluid violet submit button">Login</button>
                                <div class="ui divider"></div>
                                <a class="ui teal label">
                                    <i class="undo icon"></i>
                                    Reset Password
                                </a>
                            </div>
                        </form>
                    </div>
                    <div class="sixteen wide tablet eight wide computer column">
                        <img class="ui centered rounded bordered image" src="~/images/promoimg.png">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
